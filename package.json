{
  "name": "celestialcompass",
  "version": "0.0.4",
  "description": "A highly extensible IME for Celeste and Everest",
  "author": "SkLz",
  "license": "MIT",
  "main": "build/core/boot.js",
  "scripts": {
    "ts": "tsc",
    "tsx": "tsc -p tsconfig-web.json",
    "tsall": "npm run ts && npm run tsx",
    "tsw": "tsc -w",
    "tsxw": "tsc -p tsconfig-web.json -w",
    "launch": "npx electron build/core/boot.js",
    "files": "npx grunt",
    "build": "npm run ts && npm run tsx && npm run files",
    "run": "npm run build && npm run launch",
    "runfiles": "npm run files && npm run launch",
    "forgestart": "electron-forge start",
    "forgepackage": "electron-forge package",
    "forgemake": "electron-forge make"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "@types/jquery": "^3.5.3",
    "@types/materialize-css": "^1.0.8",
    "@types/react": "^16.9.53",
    "@types/react-dom": "^16.9.8",
    "electron": "^11.2.3",
    "grunt": "^1.3.0",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-uglify": "^5.0.0",
    "grunt-ts": "^6.0.0-beta.22",
    "grunt-webpack": "^4.0.2",
    "sass-loader": "^11.0.1",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "golden-layout": "^2.0.2",
    "grunt-contrib-htmlmin": "^3.1.0",
    "grunt-contrib-sass": "^2.0.0",
    "jquery": "^3.5.1",
    "materialize-css": "^1.0.0-rc.2",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "sass": "^1.27.0",
    "semver": "^7.3.4",
    "ws": "^7.4.3"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "celestialcompass"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "windows", "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
