{
  "typeAcquisition": {
    "enable": false
  },
  "include": [
    "src/**/*.tsx"
  ],
  "exclude": [
    "./lib/**/*",
    "./node_modules"
  ],
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "./out",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
