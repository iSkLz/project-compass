{
  "typeAcquisition": {
    "enable": false
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./src/**/*.tsx"
  ],
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "lib": [
      "ES5", "ES2015", "ES2016", "ES2017", "ES2018", "ES2019", "ES2020"
    ]
  }
}
